{{ content | safe }}

<ul>
{%- for post in collections.articles -%}
  <li><a href="{{ post.url }}">{{ post.data.title }}</a> - {{ post.page.date }}
  <br> {{post.data.strapline }}
  </li>
{%- endfor -%}
</ul>

{%- if collections.articles %}
{%- set previousPost = collections.articles | getPreviousCollectionItem %}
{%- set nextPost = collections.articles | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<ul class="links-nextprev">
	{%- if previousPost %}<li>Previous: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>{% endif %}
	{%- if nextPost %}<li>Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}


